---
const { siteTitle, siteTitleHref } = Astro.locals.starlightRoute;
---

<a href={siteTitleHref} class="site-title sl-flex">
	<span
		class="logo"
		aria-hidden="true"
		style="inline-size:2rem;block-size:2rem;display:inline-flex;align-items:center;justify-content:center;flex:0 0 auto;"
	>
		<img
			src={import.meta.env.BASE_URL + 'favicon.svg'}
			width="32"
			height="32"
			alt=""
			style="display:block;width:100%;height:100%;aspect-ratio:1/1;"
		/>
	</span>
	<span class="title-text" translate="no">{siteTitle}</span>
</a>

<style>
	@layer starlight.core {
		.site-title {
			align-items: center;
			gap: var(--sl-nav-gap);
			font-size: var(--sl-text-h4);
			font-weight: 600;
			color: var(--sl-color-text-accent);
			text-decoration: none;
			white-space: nowrap;
			min-width: 0;
		}
		.logo {
			flex: 0 0 auto;
			display: inline-flex;
			align-items: center;
			justify-content: center;
			align-self: center;
			inline-size: 1.5rem;
			block-size: 1.5rem;
		}
		.title-text {
			overflow: hidden;
			min-width: 0;
		}
		img {
			display: block;
			height: 100%;
			width: 100%;
			aspect-ratio: 1 / 1;
			max-width: 100%;
			object-fit: contain;
			object-position: 0 50%;
		}
	}
</style>
